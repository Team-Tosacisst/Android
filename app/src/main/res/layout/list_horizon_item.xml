<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="100dp"
        android:layout_height="100dp">
    <ImageView
            android:layout_width="41dp"
            android:layout_height="36dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/blog_picture" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="블로그이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/blog_title"
            app:layout_constraintTop_toBottomOf="@+id/blog_picture" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="브으으으으으응으으을로그내용.."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blog_content"
            app:layout_constraintTop_toBottomOf="@+id/blog_title" app:layout_constraintStart_toStartOf="parent"
    />
</android.support.constraint.ConstraintLayout>